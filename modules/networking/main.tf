# ============================================================================
# NETWORKING MODULE 
# ============================================================================

# ============================================================================
# VPC
# ============================================================================
resource "aws_vpc" "vpc1" {
  cidr_block = var.vpc_cidr

  tags = {
      Name = "${var.environment}-vpc"
    }

}

# ============================================================================
# INTERNET GATEWAY
# ============================================================================
resource "aws_internet_gateway" "gateway" {
  vpc_id = aws_vpc.vpc1.id
}

